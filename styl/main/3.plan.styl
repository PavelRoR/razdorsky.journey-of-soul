#plan
	padding 60px 0 20px
	background-color: #0c0c0c;
	background-image: url("../img/second_bg.png");
	background-position: center bottom
	background-repeat: no-repeat;
	background-size: cover;
.plan-bq
	font-size: 24px
	text-align: center
	font-family: OSI
	margin-bottom: 35px
.lesson
	background-color: #fff;
	width: 100%;
	max-width: 357px;
	min-height: 370px;
	margin: 0 auto 40px;
	overflow: hidden;
	padding 15px
.lesson-num
	position relative
	&:before
		content: '';
		position: absolute;
		top: -46px;
		left: -2px;
		transform: rotate(45deg);
		width: 60px;
		height: 60px;
		background-color: #0075de;
	p
		position: absolute
		font-size: 24px
		font-family: ABL
		top -15px
		left 24px
		text-transform: uppercase
.lesson-title
	padding-left: 65px
	font-size: 18px;
	font-family: ABL
	color: #101012;
	text-transform: uppercase;
	margin-bottom: 20px
	text-align: center
	min-height 70px
.lesson-list
	margin-left: 5px
	li
		padding-left: 17px
		list-style none
		margin-bottom: 10px
		color: #101012
		background-image url(../img/triangle.png)
		background-repeat no-repeat
		background-position: left top 6px
		&:last-child
			margin-bottom: 0