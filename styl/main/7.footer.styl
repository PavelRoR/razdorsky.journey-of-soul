footer
	padding: 20px 0
	background-color: #181818
	text-align: center
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0
		font-family: AB
	p
	#conditions
		font-family:  OSL
		font-size: 14px;
		color: rgba(254, 254, 254, .6);
		line-height: 1.786;
	#conditions
		margin 15px 0 0
		text-decoration: underline
.soc-buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 20px 13px
		position relative
		z-index: 1
		&:before
			content: ''
			display block
			position: absolute
			top: 0
			left 0
			right 0
			margin 0 auto
			width: 32px;
			height 32px
			transform: rotate(45deg)
			background-color: #a90c04
			border-radius: 3px
			z-index 4
			transition: all .4s ease
		.fa
			width: 32px;
			height: 32px;
			color #fff
			font-size 18px
			line-height 32px
			position relative
			z-index 9
		&:hover
			&:before
				transform: rotate(0)