#prices
	padding 60px 0
	background-image: url("../img/prices_bg.png");
	background-repeat no-repeat
	background-position: center
	background-size: cover
.price-container
	border: 1px solid rgba(255,255,255,0.3);
	background-color: #0c0c0c;
	width: 100%;
	max-width: 480px;
	margin: 0 auto 30px;
	box-shadow: 0 0 10px 5px rgba(255,255,255,0.55);
	text-align: center
	padding 30px 20px
.price
	font-family: AB
	font-size: 26px
	margin-bottom: 20px
	span
		display block
		font-size: 32px
		font-family: ABL
	&-full
		span
			text-decoration: line-through
	&-sale
		color #f00
	&-today
		color: #0f0
		margin-bottom: 40px
.timer-title
	font-size: 30px
	text-align: center
	margin: 40px 0 0
	font-family: ABL
	line-height: 1.3
	color #fff
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 40px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #a90c04
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #a90c04
	text-shadow: 2px 2px 2px rgba(#022a37,.6);